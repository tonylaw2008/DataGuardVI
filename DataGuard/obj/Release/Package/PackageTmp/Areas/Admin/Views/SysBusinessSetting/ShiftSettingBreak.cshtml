    function TurnToMinutes(strTimeSpan) {

        var splitarr = strTimeSpan.split(":");
        var Hours = parseInt(splitarr[0]);
        var min1 = Hours * 60;
        var min2 = parseInt(splitarr[1]);
        var totalmins = min1 + min2;

