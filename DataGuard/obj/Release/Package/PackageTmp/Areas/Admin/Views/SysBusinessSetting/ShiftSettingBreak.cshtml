    const mins = dt.getMinutes() + 1;
    const formatdate = [year, month, day].join('-');
    const formattime = [hour, mins, day].join(':');

    $(document).ready(function () {

        //datepicker
        $('#AppliedStartDate').datepicker({
            format: 'yyyy-mm-dd',
            timePicker: false
        });
        $('#AppliedEndDate').datepicker({
